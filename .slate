# quickly reload slate for new settings
bind 0:ctrl;alt;cmd relaunch



### Configs ###

config defaultToCurrentScreen true
config nudgePercentOf screenSize
config resizePercentOf screenSize

config windowHintsShowIcons true
config windowHintsIgnoreHiddenWindows false
config windowHintsSpread true

# do stuff that SizeUp can do
source .sizeup.slate

### Application switching ###

bind w:ctrl;alt hint ASDFGQWERTZXCVBHJKLYUIOPNM

bind e:ctrl;alt focus 'Emacs'
bind f:ctrl;alt focus 'Finder'
bind x:ctrl;alt focus 'GitX'
bind c:ctrl;alt focus 'Google Chrome'
bind t:ctrl;alt focus 'iTerm'
bind i:ctrl;alt focus 'iTunes'
bind o:ctrl;alt focus 'OpenOffice.org'
bind p:ctrl;alt focus 'Preview'
bind s:ctrl;alt focus 'Spotify'
