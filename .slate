config defaultToCurrentScreen true
config nudgePercentOf screenSize
config resizePercentOf screenSize

# size up controls that still need to be converted
#   ctrl;alt;cmd + c -- center (resize to 75% of screen width and height)
#   ctrl;cmd + (h,l) -- next/prev space
#   ctrl;alt;cmd + / -- snap back

# corners
bind k:shift;ctrl;alt corner top-right resize:screenSizeX/2;screenSizeY/2
bind l:shift;ctrl;alt corner bottom-right resize:screenSizeX/2;screenSizeY/2
bind j:shift;ctrl;alt corner bottom-left resize:screenSizeX/2;screenSizeY/2
bind h:shift;ctrl;alt corner top-left resize:screenSizeX/2;screenSizeY/2

# up/right/down/left
bind k:ctrl;alt;cmd  push up bar-resize:screenSizeY/2
bind l:ctrl;alt;cmd push right bar-resize:screenSizeX/2
bind j:ctrl;alt;cmd  push down bar-resize:screenSizeY/2
bind h:ctrl;alt;cmd push left bar-resize:screenSizeX/2

# full screen
bind m:ctrl;alt;cmd move 0;0 screenSizeX;screenSizeY

# next/previous display
bind h:ctrl;alt throw previous
bind l:ctrl;alt throw next
